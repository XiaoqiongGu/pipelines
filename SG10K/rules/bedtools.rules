"""Generic bedtools rules
"""

rule genomecov:
    # FIXME core dumps with 2.17 and 2.25 on cluster but not interactively
    # useful for wgs only
    input:
        "{sample}.bam"
    output:
        "{sample}.genomecov.txt.gz"
    shell:
        "bedtools genomecov -ibam {input} | gzip > {output};"
        

